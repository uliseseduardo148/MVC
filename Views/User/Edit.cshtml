@model MVC.Models.tbl_user

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.fld_idUser)

        <div class="form-group">
            <th>Nombre de usuario</th>
            <div class="col-md-10">
                @Html.EditorFor(model => model.fld_username, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.fld_username, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            
            <div class="col-md-10">
                @Html.EditorFor(model => model.fld_encryptedPassword, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.fld_encryptedPassword, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <th>Contraseña</th>
            <div class="col-md-10">
                @Html.EditorFor(model => model.fld_password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.fld_password, "", new { @class = "text-danger" })
            </div>
        </div>

         <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </div>
    </div>
}
