@model MVC.Models.tbl_productos

@{
    ViewBag.Title = "Editär";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="row">
            <div class="col-sm">
            </div>
            <div class="col-sm">
                <h4 style="text-align:center">Editar producto</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.fld_idProducto)

                <div class="form-group">

                    <div>
                        <label>Nombre del producto:</label>
                        @Html.EditorFor(model => model.fld_nombreProducto, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.fld_nombreProducto, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div>
                        <label>Precio:</label>
                        @Html.EditorFor(model => model.fld_precio, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.fld_precio, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div>
                        <label>Cantidad:</label>
                        @Html.EditorFor(model => model.fld_cantidad, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.fld_cantidad, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="container">
                    <div class="row">
                        <div class="col-sm">
                        </div>
                        <div class="col-sm">
                            <div class="form-group">
                                <div>
                                    <input type="submit" value="Guardar" class="btn btn-success" />
                                </div>
                            </div>
                        </div>
                        <div class="col-sm">
                            
                        </div>
                    </div>
                </div>
                
            </div>
            <div class="col-sm">
               
            </div>
        </div>
    </div>

       
}


